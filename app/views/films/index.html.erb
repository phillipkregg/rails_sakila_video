<h1>Films#index</h1>
<p>Find me in app/views/films/index.html.erb</p>

<div data-controller="hello">
  <h1 data-target="hello.output"></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-dark table-bordered table-hover">
      <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            Title
          </th>
          <th>
            Description
          </th>
          <th>
            Release Year
          </th>
        </tr>
      </thead>
      <tbody>

        <% @results.each do |film| %>
        <tr>
          <td>
            <%= film.id %>
          </td>
          <td>
            <%= film.title %>
          </td>
          <td>
            <%= film.description %>
          </td>
          <td>
            <%= film.release_year %>
          </td>
        </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>